    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "worker_scrappy",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "main.settings"
            },
            "args": [
                "--app=worker_scrapper.celery_worker:worker_scrapper",
                "worker",
                "-c",
                "1",
            ]
        },
    ]
}